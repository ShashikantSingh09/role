{
  "Version": "2012-10-17",
  "Id": "PolicyForLambda",
  "Statement": [
    {
      "Sid": "OwnerFullAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::841162707314:root"
      },
      "Action": "SQS:*",
      "Resource": "arn:aws:sqs:us-east-1:841162707314:Destination-Test-Queue"
    },
    {
      "Sid": "AllowLambdaToSendMessage",
      "Effect": "Allow",
      "Principal": {
        "Service": "lambda.amazonaws.com"
      },
      "Action": "SQS:SendMessage",
      "Resource": "arn:aws:sqs:us-east-1:841162707314:Destination-Test-Queue",
      "Condition": {
        "ArnEquals": {
          "aws:SourceArn": "arn:aws:lambda:us-east-1:841162707314:function:s3-to-sqs"
        }
      }
    }
  ]
}
